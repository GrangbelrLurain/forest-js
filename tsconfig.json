{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "isolatedModules": true,
    "strict": true
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "dist"]
}
